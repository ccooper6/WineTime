<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team1.gui.controllers.PopUpController">
   <children>
      <Pane opacity="0.19" prefHeight="485.0" prefWidth="1000.0" style="-fx-background-color: grey;" />
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: WHITE; -fx-border-radius: 20; -fx-background-radius: 20;">
         <children>
            <Button fx:id="popUpCloseButton" layoutX="440.0" layoutY="15.0" mnemonicParsing="false" style="-fx-background-color: WHITE;">
               <graphic>
                  <FontAwesomeIconView fill="GREY" glyphName="CLOSE" onMouseClicked="#closePopUp" selectionFill="#b9b9b9" size="30" text="" wrappingWidth="24.21630859375" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <FlowPane layoutX="14.0" layoutY="15.0" prefHeight="350.0" prefWidth="220.0" vgap="10.0">
               <children>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="86.0" prefWidth="225.0" style="-fx-background: white; -fx-border-color: white;">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="212.0" style="-fx-background-color: white;">
                           <children>
                              <Text fx:id="wineName" layoutY="25.0" text="Wine Name..." wrappingWidth="212.0">
                                 <font>
                                    <Font name="PT Serif" size="19.0" />
                                 </font>
                              </Text>
                           </children>
                        </AnchorPane>
                    </content>
                  </ScrollPane>
                  <Pane prefHeight="28.0" prefWidth="225.0">
                     <children>
                        <TextFlow fx:id="valueDisplay" prefHeight="28.0" prefWidth="104.0" />
                        <TextFlow fx:id="pointsDisplay" layoutX="113.0" prefHeight="28.0" prefWidth="62.0" textAlignment="RIGHT" />
                     </children>
                  </Pane>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="190.0" prefWidth="225.0" style="-fx-background: white; -fx-border-color: white;">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="212.0" style="-fx-background-color: white;">
                           <children>
                              <Text fx:id="description" layoutY="15.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Description..." wrappingWidth="212.0">
                                 <font>
                                    <Font name="PT Serif" size="14.0" />
                                 </font></Text>
                           </children>
                        </AnchorPane>
                     </content>
                  </ScrollPane>
               </children>
            </FlowPane>
            <ImageView fx:id="wineImage" fitHeight="172.0" fitWidth="200.0" layoutX="267.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/wine-bottle_pic.png" />
               </image>
            </ImageView>
            <ScrollPane fx:id="tagScrollPane" hbarPolicy="NEVER" layoutX="251.0" layoutY="242.0" prefHeight="103.0" prefWidth="228.0" style="-fx-border-color: white; -fx-background-color: white;" vbarPolicy="NEVER">
               <content>
                  <FlowPane fx:id="tagFlowPane" hgap="15.0" prefHeight="101.0" prefWidth="224.0" style="-fx-background-color: white;" vgap="10.0">
                     <children>
                        <Button fx:id="vintageTag" mnemonicParsing="false" style="-fx-background-color: #808080;" text="Vintage" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                        <Button fx:id="varietyTag" mnemonicParsing="false" style="-fx-background-color: #808080;" text="Variety" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                        <Button fx:id="countryTag" mnemonicParsing="false" style="-fx-background-color: #808080;" text="Country" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                        <Button fx:id="provinceTag" mnemonicParsing="false" style="-fx-background-color: #808080;" text="Province" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                        <Button fx:id="wineryTag" mnemonicParsing="false" style="-fx-background-color: #808080;" text="Winery" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                        <Button fx:id="regionTag" mnemonicParsing="false" style="-fx-background-color: #808080;" text="Region" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                     </children>
                  </FlowPane>
               </content>
            </ScrollPane>
            <Button fx:id="logWine" layoutX="354.0" layoutY="341.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="47.0" style="-fx-background-color: none;">
               <graphic>
                  <FontAwesomeIconView fx:id="logWineIcon" fill="#d0d0d0" glyphName="COMMENT" size="30" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="addToWishlist" layoutX="413.0" layoutY="340.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="47.0" style="-fx-background-color: none;" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="#70171e" glyphName="HEART" size="30" text="" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label layoutX="60.0" layoutY="351.0" prefHeight="12.0" prefWidth="55.0" text="Buy Now" />
            <Label layoutX="60.0" layoutY="365.0" prefHeight="17.0" prefWidth="104.0" text="on winesearcher" />
            <Button fx:id="wineSearchLink" layoutX="13.0" layoutY="345.0" mnemonicParsing="false" style="-fx-background-color: WHITE;">
               <graphic>
                  <FontAwesomeIconView fill="GREY" glyphName="SHOPPING_CART" onMouseClicked="#onWineSearchLinkClicked" selectionFill="#b9b9b9" size="30" wrappingWidth="24.21630859375" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
   </children>
</StackPane>
