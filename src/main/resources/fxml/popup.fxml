               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
                  <FontAwesomeIconView fill="#c0c0c0" glyphName="QUESTION_CIRCLE" selectionFill="#ffffff" size="18" wrappingWidth="16.000000000000114">
